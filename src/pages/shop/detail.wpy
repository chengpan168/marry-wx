          <view class="price">¥ {{item.currentAmount}}/桌</view>
          <text class="iconfont icon-enter"></text>
        </view>
      </view>

      <view class="tab-content comment" wx:if="{{tabContentType == 'tcComment'}}">
        <view class="item" wx:for="{{list}}" wx:key="{{index}}">
          <view class="user">
            <image class="avatar"
                   src="{{item.userDto.avatarUrl}}"
                   mode="aspectFill"/>
            <view class="info">
              <view class="nickname">{{item.userDto.nickName}}</view>
              <view class="time">{{item.createTimeText}}</view>
            </view>
          </view>
          <view class="content">
            {{item.content}}
          </view>
        </view>
      </view>

      <view class="tab-content two" wx:if="{{tabContentType == 'tc2'}}">
        <view class="item" wx:for="{{list}}" wx:key="{{index}}">
          <image class="banner"
                 src="{{item.coverFileDto.url}}"
                 mode="aspectFill"/>
          <view class="info">
            <text class="name">{{item.name}}</text>
            <text class="label green" wx:if="{{item.extProperty && item.extProperty.maxTableNum}}">
              {{item.extProperty.maxTableNum}}桌
            </text>
            <text class="label gray">{{item.pillarNum ? item.pillarNum : '无'}}柱</text>
          </view>
        </view>
      </view>

      <view class="tab-content one" wx:if="{{tabContentType == 'tc1'}}">
        <view class="item" wx:for="{{list}}" wx:key="{{index}}">
          <image class="banner"
                 src="{{item.coverFileDto.url}}"
                 mode="aspectFill"/>
          <view class="name">{{item.name || item.title}}</view>
          <view class="price" wx:if="{{item.currentAmount}}">¥ {{item.currentAmount}}</view>
        </view>
