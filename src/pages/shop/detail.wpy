</style>
<template>
  <view class="page">

    <view class="shop-detail">
      <image class="banner"
             src="{{detail.coverFileDto.url}}"
             mode="aspectFill"/>

      <view class="detail">
        <view class="title">{{detail.name}}</view>
        <view class="content">{{detail.description}}</view>
        <view class="item">
          <text class="iconfont icon-zuobiao"></text>
          <text>{{detail.address}}</text>
        </view>
        <view class="item">
          <text class="iconfont icon-kefu"></text>
          <text>客服微信号：{{detail.customerServiceWxAccount}}</text>
        </view>
      </view>

      <view class="tab-wrapper" wx:if="{{detail.tabType == 'tab1'}}">
        <view class="tab-item {{tabName == 'banquetHall' ? 'active' : ''}}" @tap="onTabChange('banquetHall')">宴会厅</view>
        <view class="tab-item {{tabName == 'weddingMenu' ? 'active' : ''}}" @tap="onTabChange('weddingMenu')">婚宴菜单
        </view>
        <view class="tab-item {{tabName == 'weddingCase' ? 'active' : ''}}" @tap="onTabChange('weddingCase')">婚礼案例
        </view>
        <view class="tab-item {{tabName == 'comment' ? 'active' : ''}}" @tap="onTabChange('comment')">用户点评</view>
      </view>
      <view class="tab-wrapper" wx:if="{{detail.tabType == 'tab2'}}">
        <view class="tab-item {{tabName == 'allSet' ? 'active' : ''}}" @tap="onTabChange('allSet')">全部套系</view>
        <view class="tab-item {{tabName == 'discountSetMeal' ? 'active' : ''}}" @tap="onTabChange('discountSetMeal')">作品精选</view>
        <view class="tab-item {{tabName == 'selectedWorks' ? 'active' : ''}}" @tap="onTabChange('selectedWorks')">作品精选</view>
        <view class="tab-item {{tabName == 'comment' ? 'active' : ''}}" @tap="onTabChange('comment')">用户点评</view>
      </view>
      <view class="tab-wrapper" wx:if="{{detail.tabType == 'tab3'}}">
        <view class="tab-item {{tabName == 'allSet' ? 'active' : ''}}" @tap="onTabChange('allSet')">全部套系</view>
        <view class="tab-item {{tabName == 'discountSetMeal' ? 'active' : ''}}" @tap="onTabChange('discountSetMeal')">作品精选</view>
        <view class="tab-item {{tabName == 'video' ? 'active' : ''}}" @tap="onTabChange('video')">视频赏析</view>
        <view class="tab-item {{tabName == 'comment' ? 'active' : ''}}" @tap="onTabChange('comment')">用户点评</view>
      </view>
      <view class="tab-wrapper" wx:if="{{detail.tabType == 'tab4'}}">
        <view class="tab-item active">全部套系</view>
        <view class="tab-item">个性精选</view>
        <view class="tab-item">用户点评</view>
      </view>
      <view class="tab-content three" wx:if="{{tabContentType == 'tc3'}}">
